<?xml version="1.0" encoding="utf-8"?>   
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:orientation="vertical" android:layout_width="fill_parent"  
    android:layout_height="fill_parent" >   
    <LinearLayout android:id="@+id/LinearLayout01"  
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content">   
        <TextView  
           android:layout_width="wrap_content" 
           android:layout_height="wrap_content" 
           android:text="@string/audio_rec"
         />  
        <Button android:id="@+id/ImageButton01"  
           android:layout_width="wrap_content" android:layout_height="wrap_content" >   
        </Button>   
        <Button android:id="@+id/ImageButton02"  
            android:layout_width="wrap_content" android:layout_height="wrap_content" >   
        </Button>   
        <Button android:id="@+id/ImageButton04"  
            android:layout_width="wrap_content" android:layout_height="wrap_content" >   
        </Button>  
 
    </LinearLayout>   
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#FF909090" />
            <LinearLayout 
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"> 
            <TextView  
             android:layout_width="wrap_content" 
             android:layout_height="wrap_content" 
             android:text="@string/audio_play"
            />  
           <Button
              android:id="@+id/ImageButton03"  
              android:layout_width="wrap_content" android:layout_height="wrap_content" >   
           </Button>   
           <Button 
              android:id="@+id/ImageButton05"  
              android:layout_width="wrap_content" android:layout_height="wrap_content" >   
           </Button>  
           <Button android:id="@+id/ImageButtonPlayStop"  
             android:layout_width="wrap_content" android:layout_height="wrap_content" >   
           </Button>  
    </LinearLayout>  
    <TextView android:id="@+id/TextView01" android:layout_width="wrap_content"  
        android:layout_height="wrap_content" android:textColor="#F4A460">   
    </TextView>   
    <ListView android:id="@+id/ListView01" android:layout_width="wrap_content"  
        android:layout_height="wrap_content" android:background="#000000">   
    </ListView>   
</LinearLayout>  
